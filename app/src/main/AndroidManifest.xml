<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.jobtrends.jobtrends">

    <application
        android:name=".dagger.App"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/JobTrends.Theme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".activities.SplashActivity"
            android:theme="@style/JobTrends.Theme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.BoardingActivity"
            android:theme="@style/JobTrends.Theme.NoActionBar" />
        <activity
            android:name=".activities.HomeActivity"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity android:name=".activities.JobActivity" />

        <activity
            android:name=".activities.TrainingActivity"
            android:label="Formations" />
    </application>

</manifest>