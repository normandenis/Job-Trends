<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="@dimen/medium"
            app:layout_constraintBottom_toTopOf="@id/button_0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/text_0"
                style="@style/JobTrends.TextAppearance.Title.Background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Métiers Proches"
                app:layout_constraintBottom_toTopOf="@id/recycler_0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/medium"
                android:orientation="horizontal"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:layout_constraintBottom_toTopOf="@id/text_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_0" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/text_1"
                style="@style/JobTrends.TextAppearance.Title.Background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium"
                android:text="Métiers Possibles"
                app:layout_constraintBottom_toTopOf="@id/recycler_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recycler_0" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/medium"
                android:orientation="horizontal"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:layout_constraintBottom_toTopOf="@id/text_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_1" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/text_2"
                style="@style/JobTrends.TextAppearance.Title.Background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/medium"
                android:text="Formations"
                app:layout_constraintBottom_toTopOf="@id/recycler_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recycler_1" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/medium"
                android:orientation="horizontal"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_2" />

        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_0"
            style="@style/JobTrends.Widget.Button.Background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Envoyer par email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_0" />

    </android.support.constraint.ConstraintLayout>

</layout>
