<resources>

    <style name="JobTrends" />

    <style name="JobTrends.Theme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:windowBackground">@drawable/window_background</item>

        <item name="android:textColorPrimary">?attr/colorAccent</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:textColorTertiary">@color/textColorTertiary</item>

        <item name="actionBarStyle">@style/JobTrends.Theme.ActionBar</item>
    </style>

    <style name="JobTrends.Theme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:windowBackground">@drawable/window_background</item>

        <item name="android:textColorPrimary">?attr/colorAccent</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="android:textColorTertiary">@color/textColorTertiary</item>
    </style>

    <style name="JobTrends.Theme.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">?attr/colorPrimaryDark</item>
    </style>

</resources>
