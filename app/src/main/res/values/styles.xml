<resources>

    <style name="JobTrends" />

    <style name="JobTrends.Theme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:windowBackground">@drawable/window_background</item>

        <item name="android:textColorPrimary">@color/onBackground</item>
        <item name="android:textColorSecondary">@color/onSurface</item>
        <item name="android:textColorTertiary">@color/onError</item>

        <item name="actionBarStyle">@style/JobTrends.Theme.ActionBar</item>
        <item name="dialogTheme">@style/JobTrends.Theme.Dailog.Alert</item>
        <item name="alertDialogTheme">@style/JobTrends.Theme.Dailog.Alert</item>
    </style>

    <style name="JobTrends.Theme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:windowBackground">@drawable/window_background</item>

        <item name="android:textColorPrimary">@color/onBackground</item>
        <item name="android:textColorSecondary">@color/onSurface</item>
        <item name="android:textColorTertiary">@color/onError</item>
    </style>

    <style name="JobTrends.Theme.Dailog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:windowBackground">@color/surface</item>

        <item name="android:textColorPrimary">@color/onBackground</item>
        <item name="android:textColorSecondary">@color/onSurface</item>
        <item name="android:textColorTertiary">@color/onError</item>
    </style>

    <style name="JobTrends.Theme.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">?attr/colorPrimaryDark</item>
    </style>

</resources>
